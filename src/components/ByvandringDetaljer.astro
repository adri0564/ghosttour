---
const { byvandringNavn, byvandringReview, timer, minutter, distance, start, slut, voksenPris, barnPris } = Astro.props;
---

<article itemscope itemtype="https://schema.org/SocialEvent" class="col-span-2 pb-base">
  <h2 itemprop="name" class="text-xxlarge font-bold pt-xlarge md:pt-xxlarge">{byvandringNavn}</h2>
  <p itemprop="review" class="leading-normal pt-small">{byvandringReview}</p>
  <a class="pt-base md:hidden" href="/spoegelsestur"><img class="h-large w-auto mt-base" src="/imgs/ghosttour_opdagelse.svg" alt="Custom lavet klikbart element, som fÃ¸rer dig videre til en web feature." /></a>
</article>
<div itemscope itemtype="SocialEvent">
  <section class="text-small sm:grid-cols-2">
    <slot />

    <article class="grid grid-cols-2">
      <div class="tur-info">
