---
import MainLayout from "../layouts/MainLayout.astro";
import PageIntro from "../components/PageIntro.astro";
---

<MainLayout title="Booking">
  <PageIntro pageTitle="Booking" summary="Booking af pladser på de åbne ture skal ske senest kl. 13:00 på dagen. Det er nødvendigt at booke plads på de åbne ture. Ghosttour tager forbehold for aflysninger grundet manglende tilmeldinger, sygdom og meget dårligt vejr." />

  <section class="sm:grid-cols-2 sm:grid max-w-screen-lg mx-auto gap-y-base gap-x-xlarge text-secondary-color pt-xlarge">
    <form class="py-base sm:py-0">
      <label>Dit fornavn</label><br />
      <input class="w-full" type="text" placeholder="Fornavn" inputmode="text" />
    </form>

    <form class="py-base sm:py-0">
      <label>Dit efternavn</label><br />
      <input class="w-full" type="text" placeholder="Efternavn" inputmode="text" />
    </form>

    <form class="py-base sm:py-0">
      <label>Dit telefonnummer</label><br />
      <input class="w-full" type="tel" placeholder="(0045)12345678" inputmode="tel" />
    </form>

    <form class="py-base sm:py-0">
      <label>Din e-mail adresse</label><br />
      <input class="w-full" type="email" placeholder="eksempel@mail.dk" inputmode="email" />
    </form>

    <form class="py-base sm:py-0" id="form_byvandring">
      <label>Vælg en byvandring</label><br />

      <input type="radio" id="spoegelsestur" name="fav_language" value="spoegelsestur" />
      <label for="spoegelsestur">Spøgelsestur</label><br />

      <input type="radio" id="natmaendstur" name="fav_language" value="natmaendstur" />
      <label for="natmaendstur">Natmændstur</label><br />

      <input type="radio" id="menneskeskaebner" name="fav_language" value="menneskeskaebner" />
      <label for="menneskeskaebner">Menneskeskæbner</label>
    </form>

    <form class="py-base sm:py-0">
      <label>Vælg en dato</label><br />
      <input id="date_placeholder" class="w-full" type="date" />
    </form>

    <form class="py-base sm:py-0">
      <label>Antal voksne</label><br />
      <input class="w-full" type="number" inputmode="numeric" />
    </form>

    <form class="py-base sm:py-0">
      <label>Antal børn</label><br />
      <input class="w-full" type="number" inputmode="numeric" />
    </form>

    <form class="sm:col-span-2 py-base sm:py-0">
      <label>Kommentarer/spørgsmål</label><br />
      <input class="w-full text-green-400" type="text" placeholder="Tilføj en kommentar eller et spørgsmål og vi vender tilbage hurtigst muligt." inputmode="text" />
    </form>
  </section>

